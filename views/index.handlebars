<header>
	<h1 style="margin-left: 5%;"><img src="/assets/img/burger.png" style="width: 50px;" alt="burger" srcset=""> Bungers <small class="text-muted">wif cheez</small></h1>
</header>

<div class="container">
	<div class="row">
		<div class="col">
			<div id="create-burger">
				<form action="/" method="POST" class="form-inline">
					<input id="burger-name" type="text" name="burger_name" placeholder="Enter idea, click burg ==>" required>
					<button id="submit-btn" type="submit"></button>
				</form>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6 col-sm-12">
			<div id="burgers-available">
				<p class=""><h1>Freesh Burderss</h1></p>
				{{#each burgers}}
				{{#unless this.devoured}}
				<div class="burger form-group">
					<form class="" action="/{{id}}?_method=PUT" method="POST">
						<button class="btn-warning form-control form-inline form-control-sm">{{id}} -
							{{burger_name}}</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
	
		<div class="col-lg-6 col-sm-12">
			<div id="burgers-devoured">
				<p class=""></p><h1>Eat'd borgs</h1></p>
				{{#each burgers}}
				{{#if this.devoured}}
				<div class="burger">{{id}} - {{burger_name}} </div>
				{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</div>